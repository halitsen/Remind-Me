<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
<variable
    name="createReminderViewModel"
    type="halit.sen.remindme.createReminder.CreateReminderViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".createReminder.CreateReminderActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/blue"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_back" />

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingRight="30dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingLeft="30dp">

                    <EditText
                        android:id="@+id/note_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="1dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:hint="Remind Me: "
                        android:maxLines="3"
                        android:textSize="17sp"
                        app:fontFamily="sans-serif"
                        android:textColorHint="@color/hintColor"
                        android:background="@null"
                        android:textColor="@color/darkBlue"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:paddingBottom="12dp">
                        <!--todo buradaki bilgileri viewmodel den al...-->
                    </EditText>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/darkBlue">
                </View>


                <RelativeLayout
                    android:id="@+id/date_day_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingRight="30dp"
                    android:clickable="true"
                    android:background="@color/white"
                    android:focusable="true"
                    android:paddingLeft="30dp">

                    <TextView
                        android:id="@+id/date_day_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reminder Date:"
                        android:layout_centerVertical="true"
                        android:textSize="17sp"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/blue"
                        app:fontFamily="sans-serif"/>

                    <ImageView
                        android:id="@+id/date_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:checked="false"
                        android:src="@drawable/ic_calendar">
                        <!--todo ivonları yeni mavi iconlar ile değiştir-->
                    </ImageView>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/darkBlue">
                </View>

                <RelativeLayout
                    android:id="@+id/date_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingRight="30dp"
                    android:clickable="true"
                    android:background="@color/white"
                    android:focusable="true"
                    android:paddingLeft="30dp">

                    <TextView
                        android:id="@+id/date_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reminder Time:"
                        android:layout_centerVertical="true"
                        android:textSize="17sp"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/blue"
                        app:fontFamily="sans-serif"/>

                    <ImageView
                        android:id="@+id/_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:checked="false"
                        android:src="@drawable/ic_clock">
                        <!--todo ivonları yeni mavi iconlar ile değiştir-->
                    </ImageView>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/darkBlue">
                </View>


                <RelativeLayout
                    android:id="@+id/is_birthday_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingRight="30dp"
                    android:clickable="true"
                    android:background="@color/white"
                    android:focusable="true"
                    android:paddingLeft="30dp">

                    <TextView
                        android:id="@+id/is_birthday_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Is It Birthday"
                        android:layout_centerVertical="true"
                        android:textSize="17sp"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/blue"
                        app:fontFamily="sans-serif"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/is_birthday_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:checked="false"
                        app:thumbTint="@color/blue">
                    </androidx.appcompat.widget.SwitchCompat>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/darkBlue">
                </View>

                <RelativeLayout
                    android:id="@+id/is_active_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingRight="30dp"
                    android:clickable="true"
                    android:background="@color/white"
                    android:focusable="true"
                    android:paddingLeft="30dp">

                    <TextView
                        android:id="@+id/is_active_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Close Notification"
                        android:layout_centerVertical="true"
                        android:textSize="17sp"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/blue"
                        app:fontFamily="sans-serif"/>

                    <ImageView
                        android:id="@+id/is_active_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:checked="false"
                        android:src="@drawable/ic_alarm_active">
                        <!--todo her zaman default aktif olsun isteyen kapatsın-->
                    </ImageView>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/darkBlue">
                </View>

                <TextView
                    android:id="@+id/create_reminder_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/create_reminder_button_background"
                    android:text="Create Reminder"
                    android:gravity="center"
                    android:layout_margin="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    app:fontFamily="sans-serif" />
                <!--todo eğer liste tıklanmışsa create yerine update yazsın-->

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</layout>